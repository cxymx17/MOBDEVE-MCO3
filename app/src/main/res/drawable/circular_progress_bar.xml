<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Circle -->
    <item android:id="@+id/background_circle">
        <shape
            android:shape="ring"
            android:thicknessRatio="10"
            android:useLevel="false">
            <solid android:color="#FFFFFF"/> <!-- Background color when progress is 0 -->
        </shape>
    </item>

    <!-- Progress Circle -->
    <item android:id="@+id/progress_circle">
            <shape
                android:shape="ring"
                android:thicknessRatio="10"
                android:useLevel="true">
                <solid android:color="@color/rectangle_13_color"/>
            </shape>
        ]
    </item>

</layer-list>
